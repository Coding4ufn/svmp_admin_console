doctype 5
html(data-ng-app="svmp")
  head
    title SVMP Admin Console
    link(rel='stylesheet', href='/styles/bootstrap.css')
    link(rel='stylesheet', href='/styles/proxy.css')
    script(src='vendor/jquery.min.js')
    script(src='vendor/angular.min.js')
    script(src='vendor/angular-ui.min.js')
    script(src='vendor/angular-resource.min.js')
    script(src='vendor/angular-sanitize.min.js')
    script(src='vendor/bootstrap.min.js')

  body
    div.navbar.navbar-fixed-top
      div.navbar-inner
        div.container
          a(data-toggle="collapse" data-target=".nav-collapse").btn.btn-navbar
            span.icon-bar
            span.icon-bar
          a(href="/").brand SVMP Admin Console
          div.nav-collapse
            ul.nav.pull-right
              li
                a(href="/") Proxy Users
              li
                a(href="#/apiuser") Api Access
              if(authenticated)
                li.dropdown
                  a(href="#" data-toggle="dropdown").dropdown-toggle= username 
                  ul.dropdown-menu
                    li
                      a(href="#/admin/update") Change Password
                    li.divider
                    li 
                      a(href="/logout") Logout
              else
                li
                  a( href="/login") Login
    .container
      .row
        .span12
          block content


    script(src='js/services.js')
    script(src='js/controllers.js')
    script(src='js/app.js')

